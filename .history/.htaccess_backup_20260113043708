# 1. Mencegah orang melihat daftar file di folder (Security)
Options -Indexes

# 2. Mengaktifkan fitur perapihan URL
RewriteEngine On

# 3. Menghilangkan ekstensi .php di browser
# Jadi kamu bisa akses localhost/kontak alih-alih localhost/kontak.php
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.*)$ $1.php [L]

# 4. Proteksi file sensitif agar tidak bisa diintip/didownload
<FilesMatch "\.(env|json|config|sql|log)$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order allow,deny
        Deny from all
    </IfModule>
</FilesMatch>